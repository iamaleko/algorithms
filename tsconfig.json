{
  "include": ["./src/**/*", "./test/**/*"],
  "compilerOptions": {
    "paths": {
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true
  }
}